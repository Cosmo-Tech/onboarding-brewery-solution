
{
  "steps":[
    {
      "id":"CopyLocalData",
      "command":"bash",
      "arguments":[
        "code/run_templates/sample/copy_local_data.sh"
      ],
      "description":"Copy local data packaged with simulator to simulation data folder"
    },
    {
      "id":"SimulationRun",
      "command":"main",
      "arguments":[
        "-i","BusinessApp_Simulation"
      ],
      "description":"Runs the sample simulation",
      "useSystemEnvironment":false,
      "precedents":[
        "CopyLocalData"
      ]
    },
    {
      "id":"CopyResults",
      "description":"Copy results",
      "command":"bash",
      "useSystemEnvironment":true,
      "arguments":[
        "code/run_templates/sample_rds_direct/copy_output_data.sh"
      ],
      "precedents":[
        "SimulationRun"
      ]
    },
    {
      "id":"RenameHeaders",
      "description":"Rename headers in the output CSV files to avoid space in column name",
      "command":"bash",
      "useSystemEnvironment":true,
      "arguments":[
        "code/run_templates/sample_rds_direct/rename_headers.sh"
      ],
      "precedents":[
        "CopyResults"
      ]
    },
    {
      "id":"SendResults",
      "command":"csm-data",
      "arguments":[
        "api",
        "rds-send-csv",
        "--source-folder",
        "${CSM_DATASET_ABSOLUTE_PATH}/results"
      ],
      "useSystemEnvironment":true,
      "precedents":[
        "RenameHeaders"
      ]
    }
  ]
}
